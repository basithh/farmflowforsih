<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <title>Farmer Dashboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
        <meta content="Coderthemes" name="author" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="/assets/images/favicon.ico">
        <link rel="icon" type="image/png" href="favicon.png" />
        <!-- App css -->
        <link href="/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
        <link href="/assets/css/app.min.css" rel="stylesheet" type="text/css" />

    </head>

    <body>

        <!-- Begin page -->
        <div id="wrapper">
            <%- include('partials/topbar') %>
            <%- include('partials/left-sidebar') %>

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">

                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <h1>Estimated</h1>

                                </div>
                            </div>
                        </div>
                    

                    
                   

                    <%var i=1;%>
                    <%escrop.forEach(function(obj) {%>
                     <%if((i-1)%3==0){%>
                        <div class="row"><%}%>
                            <div class="col-md-4">
                                <div class="card text-white bg-purple text-xs-center">
                                    <div class="card">
                                        <img class="card-img-top img-fluid" src="/image/<%=obj["cropid"]["image"]%>" width="900" height="600" alt="Card image cap">
                                        <div class="card-body">
                                            <h2 class="card-title"><strong style="color :#665DB5;"> <%=obj["cropid"]["cropName"]%></strong></h2>
                                            <ul>
                                                <li><strong style="color :#665DB5;">Variety</strong><span style="color :#000000;" > : <%=obj["cropid"]["variety"]%></span> </li>
                                                <li><strong style="color :#665DB5;">POA</strong><span style="color :#000000;" > : <%=obj["cropid"]["priceOnAvervage"]%></span> </li>
                                                <li><strong style="color :#665DB5;">PM</strong><span style="color :#000000;" > : <%=obj["cropid"]["priceMax"]%></span></li>
                                                <li><strong style="color :#665DB5;">DES</strong><span style="color :#000000;" > : <%=obj["cropid"]["description"]%></span></li>
                                                <li><strong style="color :#665DB5;">Wind</strong><span style="color :#000000;" > : <%=obj["cropid"]["climate"]["wind"]%>Km/Hr</span></li>
                                                <li><strong style="color :#665DB5;">Temperature</strong><span style="color :#000000;" > : <%=obj["cropid"]["climate"]["tempertature"]%>Â°C</span></li>
                                                <li><strong style="color :#665DB5;">Humidity</strong><span style="color :#000000;" > : <%=obj["cropid"]["climate"]["humidity"]%> %</span></li>
                                                <li><strong style="color :#665DB5;">Soil</strong><span style="color :#000000;" > : <%=obj["cropid"]["soil"]%> %</span></li>
                                                <li><strong style="color :#665DB5;">Requirement</strong><span style="color :#000000;" > : <%=obj["requirement"]%> </span></li>
                                                <li><strong style="color :#665DB5;">Final date of planting</strong><span style="color :#000000;" > : <%=obj["finaldateofbid"].toLocaleDateString()%>  </span></li>
                                                <li><strong style="color :#665DB5;">Location</strong><span style="color :#000000;" > : <%=obj["location"]%> %</span></li>
                                            </ul>
                                            <a href="/addmycrop/<%=obj["_id"]%>">
                                            <button type="button" class="btn btn-dark waves-effect waves-light">Add to MyCrop</button></a>
                                        </div>
                                    </div>
                                </div> <!-- end card-box-->
                            </div> 
                            <%if(i%3==0){%></div><%}%>
                            <%i+=1;})%>

                </div>
                <!-- END wrapper -->
                <%- include('partials/right-sidebar') %>

                <!-- Vendor js -->
                <script src="/assets/js/vendor.min.js"></script>


                <!-- Third Party js-->
                <script src="assets/libs/jquery-knob/jquery.knob.min.js"></script>
                <script src="assets/libs/peity/jquery.peity.min.js"></script>
                <script src="assets/libs/apexcharts/apexcharts.min.js"></script>
                <script src="assets/libs/datatables/jquery.dataTables.min.js"></script>
                <script src="assets/libs/datatables/dataTables.bootstrap4.js"></script>
                <script src="assets/libs/datatables/dataTables.responsive.min.js"></script>
                <script src="assets/libs/datatables/responsive.bootstrap4.min.js"></script>
                <script src="assets/libs/jquery-vectormap/jquery-jvectormap-1.2.2.min.js"></script>
                <script src="assets/libs/jquery-vectormap/jquery-jvectormap-us-merc-en.js"></script>
                <!-- third party js ends -->

                <!-- App js -->
                <script src="/assets/js/app.min.js"></script>

    </body>

</html>
